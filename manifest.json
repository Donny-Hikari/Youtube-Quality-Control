{
  "manifest_version": 3,

  "name": "Youtube Quality Control",
  "description": "Automatically switch to your preferred quality in Youtubeâ„¢ when available",
  "author": "Donny",
  "version": "0.0.4.3",
  "icons": {
    "64": "icons/icon64.png"
  },
  "homepage_url": "http://ny-do.com",

  "action": {
    "default_popup": "pages/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/qualityctl.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-quality-control@ny-do.com",
      "strict_min_version": "42.0"
    }
  },

  "permissions": ["storage"]
}